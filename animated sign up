    <script src="JQuery.js"></script>

<script>
    $(document).ready(function(){

        //on click on next button of name div
        $('#nameNextBtn').on('click', function(){
            $('.name').addClass('done');
            $('.contact').addClass('open');
            $('#two').addClass('active');
            $('.line').addClass('two');
        });

        //on click on prev button of contact div
        $('#contactPrevBtn').on('click', function(){
            $('.contact').removeClass('open');
            $('.name').removeClass('done');
            $('#two').removeClass('active');
        });

        //on click on next button of contact div
        $('#contactNextBtn').on('click', function(){
            $('.contact').addClass('done');
            $('.birth').addClass('open');
            $('#three').addClass('active');
            $('.line').addClass('three');
        });

        //on click on prev button of birth div
        $('#birthPrevBtn').on('click', function(){
            $('.birth').removeClass('open');
            $('.contact').removeClass('done');
            $('#three').removeClass('active');
        });

        //on click on next button of birth div
        $('#birthNextBtn').on('click', function(){
            $('.birth').addClass('done');
            $('.submit').addClass('open');
            $('#four').addClass('active');
            $('.line').addClass('four');
        });

        //on click on prev button of submit div
        $('#submitPrevBtn').on('click', function(){
            $('.submit').removeClass('open');
            $('.birth').removeClass('done');
            $('#four').removeClass('active');
        });

    });
</script>

